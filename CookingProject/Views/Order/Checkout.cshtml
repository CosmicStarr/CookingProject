@model Order


<div class="container">
    <h3 class="text-center offsets">Your one step away from your divine Food!</h3>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Checkout" method="post" role="form">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="FirstName">First name</label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="LastName">Last name</label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>        
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" id="inputAddress" placeholder="1234 Main St">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address2">Address 2</label>
            <input asp-for="Address2" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            <div id="validationServer05Feedback" class="invalid-feedback">
                Please provide a valid Phone Number.
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
         
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="State">State</label>
                <select class="custom-select">
                    <option selected disabled value="">Choose...</option>
                    <option>New York</option>
                    <option>Louisiana</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="ZipCode">Zip</label>
                <input asp-for="ZipCode" class="form-control" >
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input is-invalid" type="checkbox" value="" id="invalidCheck3" aria-describedby="invalidCheck3Feedback" required>
                <label class="form-check-label" for="invalidCheck3">
                    Agree to terms and conditions
                </label>
                <div id="invalidCheck3Feedback" class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Submit Order</button>
    </form>
</div>